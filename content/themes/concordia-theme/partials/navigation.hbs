<div class="my-fancy-nav-wrapper">
    <ul class="nav">
        <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute="true"}}" style="text-decoration: none; font-size:3vw; color:white">{{label}}</a></li>
        {{/foreach}}
        <!-- End the loop -->
    </ul>
</div>